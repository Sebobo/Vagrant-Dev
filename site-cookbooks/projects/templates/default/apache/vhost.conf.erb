<VirtualHost *:8000>
    ServerName         <%= @server_name %>
    DocumentRoot       <%= @document_root %>
    DirectoryIndex     index.html index.htm index.php

    <Directory <%= @document_root %>>
        Options FollowSymlinks
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>

    ErrorLog        <%= @vhost_basedir %>/log/error_log
    CustomLog       <%= @vhost_basedir %>/log/access_log combined
    CustomLog       <%= @vhost_basedir %>/log/access_log_time "%h %l %u %t \"%r\" %>s %b %D"
</VirtualHost>
